<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dogpark_picture"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/dogpark_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/dogpark_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dogpark_picture"
        android:layout_below="@id/dogpark_name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:isIndicator="true"
        android:numStars="5"/>

    <Button
        android:id="@+id/email_button"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/ic_email"
        android:layout_toEndOf="@id/dogpark_rating"/>

</RelativeLayout>